import java.util.Scanner;

public class Bit{

    public static void main(String args[]) {
        Scanner sc = new Scanner(System.in);

        int x = 0;
        int n = sc.nextInt();
        for (int i = 0; i < n; i++) {
            String ip = sc.next();
            if (ip.charAt(1) == '+') {
                x++;
            } else if (ip.charAt(1) == '-') {
                x--;
            }
        }

        System.out.println(x);
        sc.close();
    }
}
